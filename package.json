{
  "name": "cypress-project",
  "version": "1.0.0",
  "scripts": {
    "test": "cypress run",
    "test:web": "cypress run --spec 'cypress/e2e/web/**/*.cy.js'",
    "test:chatbot": "cypress run --spec 'cypress/e2e/chatbot/**/*.cy.js'",
    "merge:reports": "npx mochawesome-merge cypress/reports/mochawesome*.json --output cypress/reports/combined-report.json",
    "generate:report": "npx mochawesome-report-generator cypress/reports/combined-report.json --reportDir cypress/reports --reportFilename index.html --inline",
    "open:report": "npx open-cli cypress/reports/index.html",
    "test:report": "npm run test && npm run merge:reports && npm run generate:report && npm run open:report",
    "clean:reports": "if exist cypress\\reports\\*.json del cypress\\reports\\*.json && if exist cypress\\reports\\*.html del cypress\\reports\\*.html"
  },
  "devDependencies": {
    "cypress": "^13.7.3",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "open-cli": "^7.2.0"
  }
}